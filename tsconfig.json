{
	"compilerOptions": {
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"types": [
			"obsidian-typings"
		],
		"typeRoots": [
			"./node_modules",
			"./node_modules/@types",
			"./src/types"
		],
		"allowSyntheticDefaultImports": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts"
	],
	"exclude": [
		".hotreload"
	]
}